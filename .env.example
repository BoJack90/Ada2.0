# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/ada20_db

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# AI Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# External Services
TAVILY_API_KEY=your_tavily_api_key_here
RAGFLOW_API_URL=http://localhost:9380
RAGFLOW_API_KEY=your_ragflow_api_key_here
RAGFLOW_KB_ID=your_knowledge_base_id

# MCP Integration (optional)
MCP_ENABLED=false
MCP_TAVILY_SERVER_URL=http://localhost:3001
MCP_RAGFLOW_SERVER_URL=http://localhost:3002

# Security
SECRET_KEY=your_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:3001"]

# File Upload
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=["pdf","doc","docx","txt","rtf"]

# Content Generation Settings
DEFAULT_CONTENT_MODEL=gemini-1.5-pro-latest
ENABLE_DEEP_REASONING=true
RESEARCH_DEPTH=deep
MAX_RESEARCH_QUERIES=5

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=100/hour

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_USE_TLS=true
EMAIL_FROM=noreply@ada20.com

# Monitoring (optional)
SENTRY_DSN=
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090